  <script>
    // JavaScript to handle form submission
    document.getElementById('cricketSurvey').addEventListener('submit', function(event) {
      event.preventDefault(); // Prevent form from refreshing the page

      // Collect selected players
      const formData = new FormData(event.target);
      const team = {};
      formData.forEach((value, key) => {
        team[key] = value;
      });

      // Display the selected team (you can customise this further)
      let teamList = "Your Ultimate Cricket Team:\n";
      for (const [position, player] of Object.entries(team)) {
        teamList += `,[object Object],{player}\n`;
      }
      alert(teamList);
    });
  </script>
